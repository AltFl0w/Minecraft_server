# Minecraft Zoo Server Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server basic settings
SERVER_NAME=Minecraft Zoo Server
GAMEMODE=creative
DIFFICULTY=peaceful
ALLOW_CHEATS=true
MAX_PLAYERS=10
LEVEL_NAME=super-zoo

# =============================================================================
# NETWORK CONFIGURATION  
# =============================================================================

# Ports (change for production if needed)
MINECRAFT_PORT=19132
RCON_PORT=25575

# Network settings
ENABLE_LAN_VISIBILITY=true
ONLINE_MODE=false

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================

# RCON password for remote administration
# IMPORTANT: Change this for production!
RCON_PASSWORD=zoo-admin-2024

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

VIEW_DISTANCE=10
TICK_DISTANCE=4

# =============================================================================
# EXPERIMENTAL FEATURES
# =============================================================================

# Enable experiments needed for advanced addon features
EXPERIMENTS=data_driven_items,upcoming_creator_features,beta_apis,cameras

# =============================================================================
# SYSTEM SETTINGS
# =============================================================================

# Timezone for server logs
TZ=America/New_York

# =============================================================================
# ENVIRONMENT-SPECIFIC EXAMPLES
# =============================================================================

